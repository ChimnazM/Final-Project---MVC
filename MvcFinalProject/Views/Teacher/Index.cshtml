@model List<Teacher>
@{
    ViewData["Title"] = "Index";
}
	<div class="banner-area-wrapper">
            <div class="banner-area text-center">	
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="banner-content-wrapper">
                                <div class="banner-content">
                                    <h2>our teachers</h2> 
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
		<!-- Banner Area End -->
        <!-- Teacher Start -->
        <div class="teacher-area pt-150 pb-105">
            <div class="container">
                <div class="row">
                 @foreach (var teacher in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="single-teacher mb-45">
                            <div class="single-teacher-img">
                                <a  asp-controller="Teacher" asp-action="Detail" asp-route-id="@teacher.Id"><img src="~/Assets/img/teacher/@teacher.MainImage" alt="teacher"></a>  
                            </div>
                            <div class="single-teacher-content text-center">
                                <h2><a asp-controller="Teacher" asp-action="Detail" asp-route-id="@teacher.Id">@teacher.Fullname</a></h2>
                                <h4>@teacher.Profession</h4>
                                <ul>
                                    <li><a href="https://@teacher.Contact.FacebookUrl"><i class="zmdi zmdi-facebook"></i></a></li>
                                    <li><a href="@teacher.Contact.PinterestUrl"><i class="zmdi zmdi-pinterest"></i></a></li>
                                    <li><a href="@teacher.Contact.InstagramUrl"><i class="zmdi zmdi-vimeo"></i></a></li>
                                    <li><a href="@teacher.Contact.TwitterUrl"><i class="zmdi zmdi-twitter"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
                    
                
                </div>
            </div>
        </div>
        <!-- Teacher End -->
        <!-- Subscribe Start -->
        @await Component.InvokeAsync("Subscribe")

