@model AboutVM
@{
    ViewData["Title"] = "Index";
}
		<!-- Banner Area Start -->
		<div class="banner-area-wrapper">
            <div class="banner-area text-center">	
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="banner-content-wrapper">
                                <div class="banner-content">
                                    <h2>about us</h2> 
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
		<!-- Banner Area End -->
        <!-- About Start -->
        <div class="about-area pt-145 pb-155">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="about-content">
                            <h2>@Model.Welcome.Title</h2>
                            <p>@Model.Welcome.Description</p>
                            <p class="hidden-sm">I must explain to you how all this mistaken idea of denouncing pleure and prsing pain was born and I will give you a complete account of the system</p>
                            <a class="default-btn" href="#">view courses</a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="about-img">
                            <img src="~/Assets/img/about/@Model.Welcome.Image" alt="about">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- About End -->
        <!-- Teacher Start -->
        <div class="teacher-area pb-150">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="section-title text-center">
                            <img src="~/Assets/img/icon/section.png" alt="title">
                            <h2>meet our teachers</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                       @foreach (var teacher in Model.Teachers)
                      {
                          <div class="col-lg-3 col-sm-6">
                        <div class="single-teacher">
                            <div class="single-teacher-img">
                                <a href="teacher-details.html"><img src="~/Assets/img/teacher/@teacher.MainImage" alt="teacher"></a>  
                            </div>
                            <div class="single-teacher-content text-center">
                                <h2><a href="teacher-details.html">@teacher.Fullname</a></h2>
                                <h4>Associate Professor</h4>
                                <ul>
                                    <li><a href="@teacher.Contact.FacebookUrl"><i class="zmdi zmdi-facebook"></i></a></li>
                                    <li><a href="@teacher.Contact.PinterestUrl/"><i class="zmdi zmdi-pinterest"></i></a></li>
                                    <li><a href="@teacher.Contact.InstagramUrl"><i class="zmdi zmdi-vimeo"></i></a></li>
                                    <li><a href="@teacher.Contact.TwitterUrl"><i class="zmdi zmdi-twitter"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                      }
                 
                    </div>
                </div>
            </div>
        </div>
        <!-- Teacher End -->
        <!-- Testimonial Area Start -->
        @await Component.InvokeAsync("Testimonial")
        <!-- Testimonial Area End -->
        <!-- Notice Start -->
       @await Component.InvokeAsync("NoticeBoard")
        <!-- Notice End -->
        <!-- Subscribe Start -->
       @await Component.InvokeAsync("Subscribe")

