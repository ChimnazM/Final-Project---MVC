@model List<Slider>
@{
    ViewData["Title"] = "Index";
}
 <div class="main-panel">
       <div class="content-wrapper">
            <div class="row">
             <div class="col-lg-12 stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Table with contextual classes</h4>
                  <p class="card-description">
                    Add class <code>.table-{color}</code>
                  </p>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>
                            Id
                          </th>
                          <th>
                            Image
                          </th>
                           <th>
                            TopTitle
                          </th>
                           <th>
                            BottomTitle
                          </th>
                           <th>
                            Description
                          </th>
                           <th>
                            Order
                          </th>
                          <th>
                            Actions
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        
                        @foreach (var slider in Model)
                       {
                           <tr class="table-success">
                          <td>
                            @slider.Id
                          </td>
                          <td>
                           <img src="~/Assets/img/slider/@slider.Image">
                          </td>
                           <td>
                           @slider.TopTitle
                          </td>
                            <td>
                           @slider.BottomTitle
                          </td>
                            <td>
                          @Html.Raw(@slider.Description)
                          </td>
                            <td>
                           @slider.Order
                          </td>
                          <td>
                            <a class="btn btn-primary" asp-controller="Slider" asp-action="Detail" asp-route-id="@slider.Id">Detail</a>
                            <a class="btn btn-warning" asp-controller="Slider" asp-action="Update" asp-route-id="@slider.Id">Update</a>
                            <a class="btn btn-danger" asp-controller="Slider" asp-action="Delete" asp-route-id="@slider.Id">Delete</a>
                          </td>
                      
                        </tr>
                       }
                        
                       
                      </tbody>
                    </table>
                  </div>
                </div>
              </div> 
              </div>
           </div> 
         </div>
 </div>

