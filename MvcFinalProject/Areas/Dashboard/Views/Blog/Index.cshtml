@model List<Blog>
@{
    ViewData["Title"] = "Index";
}
 <div class="main-panel">
       <div class="content-wrapper">
            <div class="row">
             <div class="col-lg-12 stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Table with contextual classes</h4>
                  <p class="card-description">
                    Add class <code>.table-{color}</code>
                  </p>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>
                            Id
                          </th>
                          <th>
                            Image
                          </th>
                          <th>
                            Title
                          </th>
                          <th>
                            Actions
                          </th>
                     
                        </tr>
                      </thead>
                      <tbody>
                        
                        @foreach (var blog in Model)
                       {
                           <tr class="table-success">
                          <td>
                            @blog.Id
                          </td>
                           <td>
                            <img src="~/Assets/img/blog/@blog.Image">
                          </td>
                          <td>
                           @blog.Title
                          </td>
                        
                          <td>
                            <a class="btn btn-primary" asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">Detail</a>
                            <a class="btn btn-warning" asp-controller="Blog" asp-action="Update" asp-route-id="@blog.Id">Update</a>
                            <a class="btn btn-danger" asp-controller="Blog" asp-action="delete" asp-route-id="@blog.Id">Delete</a>
                          </td>
                      
                        </tr>
                       }
                        
                       
                      </tbody>
                    </table>
                  </div>
                </div>
              </div> 
              </div>
           </div> 
         </div>
 </div>

