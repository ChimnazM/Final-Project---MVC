@model Blog
@{
    ViewData["Title"] = "Detail";
}

<div class="main-panel">        
        <div class="content-wrapper">
          <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body" style="background-color: #B2BABB">
                  <ul>
                      <li>
                      Navbar Logo:<br>
                      <img src="~/Assets/img/blog/@Model.Image" style="width: 200px; border-radius: 0%;" />
                  </li><br><br>
                 <br><br>
                  <li>
                      @Model.Title
                  </li>
                   <li>
                      @Model.Explanation
                  </li>
                   <li>
                      @Model.Description
                  </li>
                   
                  </ul>
                  
                  <a class="btn btn-primary" asp-action="Index">Cancel</a>
                </div>
              </div>
            </div>
             </div>
              </div>
            </div>



