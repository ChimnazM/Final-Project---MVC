@model Teacher
@{
    ViewData["Title"] = "Delete";
}

 <div class="main-panel">        
        <div class="content-wrapper">
          <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">@Model.Fullname</h4>
                  <img src="~/assets/img/teacher/@Model.MainImage" style="width: 450px" />
                   <img src="~/assets/img/teacher/@Model.DetailImage" style="width: 450px" />
                  <p>
                     About: @Model.Title
                  </p>
                  <p>
                   Degree: @Model.Description
                  </p>
                  <p>
                   Hobbies: @Model.Profession
                  </p>
                

                  <p>
                   Mail: @Model.Contact.Email
                  </p>
                  <p>
                   PhoneNumber: @Model.Contact.PhoneNumber
                  </p>
                  <p>
                   Skype: @Model.Contact.Skype
                  </p>
                  <p>
                   FirstURL: @Model.Contact.InstagramUrl
                  </p>
                  <p>
                   SecondURL: @Model.Contact.FacebookUrl
                  </p>
                  <p>
                   ThirdURL: @Model.Contact.TwitterUrl
                  </p>
                  <p>
                   FourthURL: @Model.Contact.PinterestUrl
                  </p>

                  @*@foreach (var item in Model.TeacherSkills)
                 {
                     <p>@item.Skill.SkillName - @item.Percentage</p>
                 }*@
                 <p>Skills: </p>
                 @foreach (var item in Model.Skill)
                {
                    <p>@item.Value - @item.Key </p>
                }
                  <p>Eminsinizmi ?</p>
                  <form method="post" asp-action="Delete"><button class="btn btn-secondary" type="submit">Submit</button></form>
                  <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                </div>
              </div>
            </div>
           </div>
          </div>
        </div>
